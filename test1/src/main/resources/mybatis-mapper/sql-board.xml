<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.BoardMapper">
	<select id="getBoard" parameterType="hashmap" resultType="com.example.test1.model.Board">
		SELECT *
		FROM BOARD
	</select>
	<insert id="insertBoard" parameterType="hashmap">
		INSERT INTO BOARD(BOARDNO,TITLE, CONTENTS, USERID, CNT, CDATETIME, UDATETIME)
		VALUES (COMMENT_SEQ.NEXTVAL, #{title}, #{contents}, 'user001', '2', SYSDATE, SYSDATE )
	</insert>
	<delete id="deleteBoard" parameterType="hashmap">
		DELETE FROM BOARD WHERE BOARDNO = #{boardNo}
	</delete>
</mapper>




